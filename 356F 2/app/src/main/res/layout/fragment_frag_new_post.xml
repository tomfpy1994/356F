<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bunnyfung.a356f.FragNewPost">

    <RelativeLayout
        android:id="@+id/activity_new_post_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Brand:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/tvBrand"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_below="@+id/textview_2"
            android:layout_alignEnd="@+id/textview_2"
            android:paddingBottom="5dip" />

        <TextView
            android:text="Type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/tvType"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_below="@+id/tvBrand"
            android:layout_alignEnd="@+id/tvBrand"
            android:paddingBottom="5dip" />

        <TextView
            android:text="Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/tvPrice"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_below="@+id/tvSize"
            android:layout_alignEnd="@+id/tvSize"
            android:paddingBottom="5dip" />

        <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/tvDescription"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_below="@+id/tvPrice"
            android:layout_alignEnd="@+id/tvPrice"
            android:paddingBottom="5dip" />

        <TextView
            android:text="Size:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/tvSize"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/tvType"
            android:layout_alignEnd="@+id/tvType" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtName"
            android:width="100dp"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:textSize = "14sp"
            android:layout_above="@+id/tvBrand"
            android:layout_toEndOf="@+id/textview_2"
            android:hint="Product Name"
            android:text="ABC123" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="10"
            android:ems="10"
            android:id="@+id/tfSize"
            android:width="30dp"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:textSize = "14sp"
            android:layout_above="@+id/tvPrice"
            android:layout_toEndOf="@+id/tvSize"
            android:hint="Size" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="100"
            android:ems="10"
            android:id="@+id/tfPrice"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:layout_above="@+id/tvDescription"
            android:layout_toEndOf="@+id/tvPrice"
            android:textSize = "14sp"
            android:width="80dp"
            android:hint="Price" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="I am a boy"
            android:ems="10"
            android:id="@+id/tfDescription"
            android:paddingBottom="20dip"
            android:paddingTop="3dip"
            android:layout_alignBaseline="@+id/tvDescription"
            android:layout_alignBottom="@+id/tvDescription"
            android:layout_toEndOf="@+id/tvDescription"
            android:textSize = "14sp"
            android:width="250dip"
            android:hint="Description" />

        <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_2"
            android:layout_marginStart="54dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_marginTop="219dp"
            android:paddingBottom="5dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:text="(0.5)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbSize"
            android:layout_alignBottom="@+id/tfSize"
            android:layout_toEndOf="@+id/tfPrice" />

        <ImageView
            app:srcCompat="@android:drawable/ic_menu_report_image"
            android:id="@+id/ivBigPhoto"
            android:layout_alignParentTop="true"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_marginLeft="100dp" />

        <ImageView
            app:srcCompat="@android:drawable/ic_menu_report_image"
            android:id="@+id/ivPhoto2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="184dp" />

        <Button
            android:text="Submit"
            android:textSize="13sp"
            android:id="@+id/btnPostSubmit"
            android:layout_below="@+id/tfDescription"
            android:layout_alignEnd="@+id/cbSize"
            android:layout_width="100dp"
            android:layout_height="40dp" />

        <Button
            android:text="Cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:id="@+id/btnPostCancel"
            android:layout_below="@+id/tfDescription"
            android:layout_alignEnd="@+id/tfDescription" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="ssss"
            android:ems="10"
            android:id="@+id/tfType"
            android:width="100dp"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:textSize = "14sp"
            android:layout_above="@+id/tvSize"
            android:layout_toEndOf="@+id/tvType"
            android:hint="Product Type" />

        <ImageView
            android:layout_height="55dp"
            android:layout_width="55dp"
            app:srcCompat="@android:drawable/ic_menu_report_image"
            android:id="@+id/ivPhoto1"
            android:layout_marginLeft="70dp"
            android:layout_above="@+id/edtName"
            android:layout_toStartOf="@+id/btnPostSubmit" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Adidas"
            android:ems="10"
            android:id="@+id/tfBrand"
            android:width="100dp"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:textSize = "14sp"
            android:layout_alignBaseline="@+id/tvBrand"
            android:layout_alignBottom="@+id/tvBrand"
            android:layout_toEndOf="@+id/tvBrand"
            android:hint="Product Brand" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvStatu"
            android:text="test"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</FrameLayout>
